<h1>Listing tweets</h1>

<%= form_tag tweets_path, method: :get do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

<%= form_for @new_tweet do |f| %>
  <%= f.label :content, "Tweet about it!" %>
  <%= f.text_field :content %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.handle %></td>
      </tr>
    <% end %>
  </tbody>
</table>
